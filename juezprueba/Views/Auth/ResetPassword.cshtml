@model juezprueba.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<style>
    .container-reset {
        max-width: 500px;
        margin: 3rem auto;
        padding: 3rem 2rem;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(var(--bs-body-color-rgb), 0.1);
        background: var(--bs-body-bg);
        border: 1px solid var(--bs-border-color);
        position: relative;
        z-index: 10;
    }

    .title-reset {
        color: var(--bs-heading-color);
        font-weight: 700;
        font-size: 1.75rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: var(--bs-heading-color);
        font-weight: 500;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid var(--bs-border-color);
        border-radius: 12px;
        background-color: var(--bs-body-bg);
        color: var(--bs-body-color);
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
        }

    .text-danger {
        display: block;
        margin-top: 0.5rem;
        color: var(--bs-danger);
        font-size: 0.875rem;
    }

    .btn-submit {
        width: 100%;
        padding: 0.875rem;
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        color: white !important;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        margin-top: 1rem;
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

        .btn-submit::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #3b82f6 10%, #8b5cf6 90%);
            opacity: 0;
            transition: opacity 0.4s ease;
            z-index: -1;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
        }

            .btn-submit:hover::before {
                opacity: 1;
            }

        .btn-submit::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient( 90deg, transparent, rgba(255, 255, 255, 0.15), transparent );
            transition: left 0.6s ease;
        }

        .btn-submit:hover::after {
            left: 100%;
        }

    /* Responsive */
    @@media (max-width: 640px) {
        .container-reset {
            margin: 2rem 1rem;
            padding: 2rem 1.5rem;
        }

        .title-reset {
            font-size: 1.5rem;
        }

        .btn-submit {
            padding: 0.75rem;
            font-size: 1rem;
        }
    }
</style>

@section ParticleBackground {
    <script src="~/js/particleBackground.js"></script>
}

<div class="container-reset">
    <h2 class="title-reset">Restablecer Contraseña</h2>

    <form asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="Token" />
        <input type="hidden" asp-for="Email" />

        <div class="form-group">
            <label class="form-label" asp-for="Password">Nueva contraseña</label>
            <input asp-for="Password" class="form-control" placeholder="Ingresa tu nueva contraseña" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="ConfirmPassword">Confirmar contraseña</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirma tu nueva contraseña" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">
            Guardar nueva contraseña
        </button>
    </form>
</div>