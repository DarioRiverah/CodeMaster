<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - integradorGD</title>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/integradorGD.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Añade Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-purple border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">integradorGD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ListaProblema">Problemas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ranking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Nosotros</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <span class="text-white me-2">
                                @User.FindFirst("Nombre")?.Value @User.FindFirst("Apellido")?.Value
                            </span>
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-light ms-2">Cerrar sesión</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-light ms-2" href="@Url.Action("Login", "Auth")">Login</a>
                            <a class="btn btn-outline-light ms-2" href="@Url.Action("Register", "Auth")">Register</a>
                        }
                        <button id="themeToggle" class="btn btn-sm btn-outline-dark ms-2">
                            <i class="bi bi-moon-stars"></i>
                        </button>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - integradorGD - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        // Función para cambiar el tema y guardar preferencia
        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute('data-bs-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

            document.documentElement.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);

            // Actualizar icono
            const themeIcon = document.getElementById('themeToggle').querySelector('i');
            themeIcon.className = newTheme === 'dark' ? 'bi bi-moon-stars' : 'bi bi-sun';

            // Cambiar clase del botón para el tema claro/oscuro
            const themeButton = document.getElementById('themeToggle');
            themeButton.className = newTheme === 'dark'
                ? 'btn btn-sm btn-outline-light ms-2'
                : 'btn btn-sm btn-outline-dark ms-2';
        }

        // Cargar tema guardado al iniciar
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                document.documentElement.setAttribute('data-bs-theme', savedTheme);

                // Actualizar icono según el tema guardado
                const themeIcon = document.getElementById('themeToggle').querySelector('i');
                themeIcon.className = savedTheme === 'dark' ? 'bi bi-moon-stars' : 'bi bi-sun';

                // Actualizar clase del botón
                const themeButton = document.getElementById('themeToggle');
                themeButton.className = savedTheme === 'dark'
                    ? 'btn btn-sm btn-outline-light ms-2'
                    : 'btn btn-sm btn-outline-dark ms-2';
            }

            // Asignar evento al botón
            document.getElementById('themeToggle').addEventListener('click', toggleTheme);
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>