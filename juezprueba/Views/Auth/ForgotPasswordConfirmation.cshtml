@{
    ViewData["Title"] = "Revisa tu correo";
}

<style>
    .simple-container {
        max-width: 500px;
        margin: 3rem auto;
        padding: 2.5rem;
        text-align: center;
        position: relative;
        z-index: 10;
    }

    .simple-title {
        color: var(--bs-heading-color);
        font-size: 1.5rem;
        margin-bottom: 1.25rem;
        font-weight: 600;
        animation: fadeIn 0.6s ease-out;
    }

    .simple-message {
        color: var(--bs-secondary-color);
        line-height: 1.6;
        animation: fadeIn 0.8s ease-out;
    }

    /* Animación sutil */
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* Efecto de partículas en el fondo */
    .particles-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
    }

    /* Responsive */
    @@media (max-width: 640px) {
        .simple-container {
            margin: 2rem auto;
            padding: 1.5rem;
        }

        .simple-title {
            font-size: 1.3rem;
        }
    }
</style>

@section ParticleBackground {
    <script src="~/js/particleBackground.js"></script>
    <div class="particles-background"></div>
}

<div class="simple-container">
    <h2 class="simple-title">Revisa tu correo electrónico</h2>
    <p class="simple-message">
        Si tu cuenta existe y el correo está confirmado, te enviamos un enlace para restablecer tu contraseña.
    </p>
</div>