@model juezprueba.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<style>
    .container-forgot {
        max-width: 400px;
        margin: 2rem auto;
        padding: 2.5rem;
        border-radius: 12px;
        background: var(--bs-body-bg);
        border: 1px solid var(--bs-border-color);
        box-shadow: 0 4px 12px rgba(var(--bs-body-color-rgb), 0.1);
    }

    .title-forgot {
        text-align: center;
        margin-bottom: 1.5rem;
        color: var(--bs-heading-color);
        font-weight: 600;
        font-size: 1.5rem;
    }

    .form-group-forgot {
        margin-bottom: 1.5rem;
    }

    .form-label-forgot {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--bs-secondary-color);
    }

    .form-control-forgot {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid var(--bs-border-color);
        border-radius: 8px;
        background: var(--bs-body-bg);
        color: var(--bs-body-color);
        transition: all 0.3s ease;
    }

        .form-control-forgot:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
            outline: none;
        }

    .btn-forgot {
        width: 100%;
        padding: 0.85rem;
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        color: white !important;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

        .btn-forgot::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #3b82f6 10%, #8b5cf6 90%);
            opacity: 0;
            transition: opacity 0.4s ease;
            z-index: -1;
        }

        .btn-forgot:hover {
            box-shadow: 0 4px 16px rgba(99, 102, 241, 0.4);
        }

            .btn-forgot:hover::before {
                opacity: 1;
            }

        .btn-forgot::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient( 90deg, transparent, rgba(255, 255, 255, 0.15), transparent );
            transition: left 0.6s ease;
        }

        .btn-forgot:hover::after {
            left: 100%;
        }

    .text-danger {
        color: var(--bs-danger);
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

@section ParticleBackground {
    <script src="~/js/particleBackground.js"></script>
}

<div class="container-forgot">
    <h2 class="title-forgot">¿Olvidaste tu contraseña?</h2>
    <p class="text-center mb-4 text-muted">Ingresa tu email para recibir un enlace de recuperación</p>

    <form asp-action="ForgotPassword" method="post">
        <div class="form-group-forgot">
            <label class="form-label-forgot" asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control-forgot" type="email" placeholder="tu@email.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-forgot">
            Enviar enlace de recuperación
        </button>
    </form>
</div>