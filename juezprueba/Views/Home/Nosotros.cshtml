@section Scripts {
    <script>
        function animateCounters() {
            const counters = document.querySelectorAll('.stat-number[data-target]');
            const speed = 200; // Duración en ms

            counters.forEach(counter => {
                const target = +counter.getAttribute('data-target');
                const count = +counter.innerText;
                const increment = target / speed;

                const updateCounter = () => {
                    const current = +counter.innerText;

                    if (current < target) {
                        counter.innerText = Math.ceil(current + increment);
                        setTimeout(updateCounter, 1);
                    } else {
                        counter.innerText = target;
                        counter.classList.add('counting');
                    }
                };

                updateCounter();
            });
        }

        // Animaciones al hacer scroll
        function handleScrollAnimations() {
            const elements = document.querySelectorAll('.animate-on-scroll');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animated');
                    }
                });
            }, {
                threshold: 0.1
            });

            elements.forEach(el => {
                observer.observe(el);
            });
        }

        // Efecto parallax suave
        function handleParallax() {
            window.addEventListener('scroll', () => {
                const scrolled = window.pageYOffset;
                const parallaxElements = document.querySelectorAll('.floating-shapes');

                parallaxElements.forEach(element => {
                    const speed = 0.5;
                    element.style.transform = `translateY(${scrolled * speed}px)`;
                });
            });
        }

        // Crear partículas flotantes
        function createParticles() {
            const sections = document.querySelectorAll('.hero-section, .team-section, .stats-section, .story-section');

            sections.forEach(section => {
                const particleContainer = document.createElement('div');
                particleContainer.className = 'particle-system';
                section.appendChild(particleContainer);

                // Crear partículas
                const particleCount = Math.floor(section.offsetWidth / 10);

                for (let i = 0; i < particleCount; i++) {
                    const particle = document.createElement('div');
                    const size = Math.random() * 5 + 1;
                    const posX = Math.random() * 100;
                    const delay = Math.random() * 15;
                    const duration = Math.random() * 10 + 10;

                    // Asignar clase según tamaño
                    if (size < 2) particle.classList.add('particle--small');
                    else if (size < 4) particle.classList.add('particle--medium');
                    else particle.classList.add('particle--large');

                    // 10% de probabilidad de ser una partícula especial
                    if (Math.random() > 0.9) particle.classList.add('particle--sparkle');

                    particle.style.cssText = `
                        width: ${size}px;
                        height: ${size}px;
                        left: ${posX}%;
                        top: 100%;
                        animation-delay: ${delay}s;
                        animation-duration: ${duration}s;
                    `;

                    particleContainer.appendChild(particle);
                }
            });
        }

        // Efecto de brillo en hover para elementos especiales
        function addGlowEffects() {
            const glowElements = document.querySelectorAll('.btn-instagram, .team-card, .stat-item');

            glowElements.forEach(element => {
                element.addEventListener('mouseenter', function() {
                    this.style.filter = 'brightness(1.1) drop-shadow(0 0 10px rgba(99, 102, 241, 0.3))';
                });

                element.addEventListener('mouseleave', function() {
                    this.style.filter = 'none';
                });
            });
        }

        // Inicializar todo cuando la página carga
        document.addEventListener('DOMContentLoaded', function() {
            animateCounters();
            createParticles();

            // Intersection Observer para animaciones al hacer scroll
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animated');
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.animate-on-scroll').forEach(el => {
                observer.observe(el);
            });
        });

        // Smooth scroll para navegación interna
        document.addEventListener('click', function(e) {
            if (e.target.getAttribute('href') && e.target.getAttribute('href').startsWith('#')) {
                e.preventDefault();
                const target = document.querySelector(e.target.getAttribute('href'));
                target.scrollIntoView({ behavior: 'smooth' });
            }
        });
    </script>
}